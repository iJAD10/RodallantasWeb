<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RodaLlantas</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <style>
        .content-container {
            flex: 1 0 auto;
        }

        footer {
            flex-shrink: 0;
        }

    </style>
</head>
<body style="display: flex; flex-direction: column; min-height: 100vh;">

    

    <body>
        <div class="d-flex flex-column min-vh-100">
            <!-- Navbar -->
         
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <a class="navbar-brand" href="#">
                    <img src="~/img/Logo.jpeg" alt="Logo RodaLlantas" width="30" height="30" class="d-inline-block align-top">
                    RodaLlantas
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a href="@Url.Action("PrincipalCliente", "Home")" class="nav-link">
                                Inicio
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ConsultarProductosCliente", "Productos")">
                                Productos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("RegistrarVehiculoYReservacion", "Reservaciones")">
                                Servicios
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Nosotros", "Home")">
                                Nosotros
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Listar", "Carrito")">
                                <span id="numeroCarrito">@Context.Session.GetString("Usu_Num_Carrito")</span>
                                <i class="fas fa-shopping-cart"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("CerrarSesion", "Home")" class="nav-link">
                                <i class="fas fa-sign-out-alt"></i>
                            </a>
                        </li>
                    </ul>
                </div>
           </nav>

            <!-- Contenido Principal -->
            <div class="content-container container mt-0">
                @RenderBody()
            </div>

            <!-- Footer -->
            <footer class="bg-dark text-white text-center py-3">
                Roda Llantas de Turrialba S.A. © 2023.
            </footer>
        </div>
    </body>

  

    
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
