@model Web_Roda_Llantas.Entities.UsuarioEntities

@{
    ViewData["Title"] = "Ingreso de usuario";
    Layout = "~/Views/Shared/_Layout_Login2.cshtml";
}
<br />
<br />
<div class="row w-100 mx-0">
    <div class="col-lg-6 mx-auto">
        <!-- Cambiamos el color de fondo a #343a40 para que sea igual al navbar y footer -->
        <div class="auth-form-light text-left py-5 px-4 px-sm-5" style="background-color: #343a40; font-family: 'Raleway', sans-serif;">

            <div class="text-center mb-4">
                <img src="~/img/Logo.jpeg" alt="Logo de Roda Llantas" style="width: 120px;">
            </div>

            <!-- Añadimos la clase text-center para centrar el texto "Iniciar sesión" -->
            <h4 class="text-center" style="color: #fff;">Iniciar sesión</h4>
            @using (Html.BeginForm("Principal", "Home", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Usu_Correo, 
                        new 
                        { 
                            @class="form-control form-control", 
                            @placeholder="Correo Electrónico", 
                            @type="email" ,
                            @requied = true
                        })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.Usu_Clave, 
                        new 
                        { 
                            @class="form-control form-control", 
                            @placeholder="Contraseña",
                            @requied = true
                        })
                </div>
                <div class="mt-3">
                    <input type="submit" class="btn btn-block btn-primary btn font-weight-medium auth-form-btn" value="Iniciar Sesión" />
                </div>
                <div class="text-center mt-4 font-weight-light">
                    <a href="@Url.Action("RegistrarUsuario", "Home")" class="text-primary">Crear una cuenta</a>
                    <br />
                    <a href="@Url.Action("RecuperarContrasenna", "Home")" class="text-primary">Recuperar contraseña</a>
                </div>
            }
        </div>
    </div>
</div>
