@model Web_Roda_Llantas.Entities.UsuarioEntities

@{
    ViewData["Title"] = "Ingreso de usuario";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div class="row w-100 mx-0">
    <div class="col-lg-4 mx-auto">
        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
            <h4>Iniciar sesión</h4>
            @using (Html.BeginForm("Principal", "Home", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Usu_Correo, 
                        new 
                        { 
                            @class="form-control form-control-lg", 
                            @placeholder="Correo Electrónico", 
                            @type="email" ,
                            @requied = true
                        })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.Usu_Clave, 
                        new 
                        { 
                            @class="form-control form-control-lg", 
                            @placeholder="Contraseña",
                            @requied = true
                        })
                </div>
                <div class="mt-3">
                    <input type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" value="Iniciar Sesión" />
                </div>
                <div class="text-center mt-4 font-weight-light">
                    <a href="@Url.Action("RegistrarUsuario", "Home")" class="text-primary">Crear una cuenta</a>
                    <br />
                    <a href="@Url.Action("RecuperarContrasenna", "Home")" class="text-primary">Recuperar contraseña</a>
                </div>
            }
        </div>
    </div>
</div>