@model Web_Roda_Llantas.Entities.UsuarioEntities

@{
    ViewData["Title"] = "Recuperar Contraseña";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div class="row w-100 mx-0">
    <div class="col-lg-4 mx-auto">
        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
            <div class="brand-logo">
                @*<img src="~/template/images/logo.svg" alt="logo" />*@
            </div>
            <h4>Recuperar Contraseña</h4>
            @using (Html.BeginForm("RecuperarContrasenna", "Home", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Usu_Correo,
                        new
                        {
                            @class="form-control form-control-lg",
                            @placeholder="Correo",
                            @type="email",
                            @onblur="BuscarCorreo('RecuperarContra');",
                            @requied = true
                        })
                </div>
                <div class="mt-3">
                    <input type="submit" id="btnProcesar" disabled class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" value="Procesar" />
                </div>
            }
        </div>
    </div>
</div>