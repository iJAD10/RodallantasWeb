@model Web_Roda_Llantas.Entities.UsuarioEntities

@{
    ViewData["Title"] = "Registrar usuario";
    Layout = "~/Views/Shared/_Layout_Login2.cshtml";
}
<br />
<br />
<div class="row w-100 mx-0">
    <div class="col-lg-6 mx-auto">
        <!-- Cambiamos el color de fondo a #343a40 para que sea igual al navbar y footer -->
        <div class="auth-form-light text-left py-5 px-4 px-sm-5" style="background-color: #343a40; font-family: 'Raleway', sans-serif;">

            <div class="text-center mb-4">
                <img src="~/img/Logo.jpeg" alt="Logo de Roda Llantas" style="width: 120px;">
            </div>

            <h4 class="text-center" style="color: #fff;">Registrar Usuario</h4>
            @using (Html.BeginForm("RegistrarUsuario", "Home", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Usu_Cedula,
                        new
                        {
                            @class="form-control form-control",
                            @placeholder="Identificación",
                            @type="number",
                            @minlength="9",
                            @maxlength="9",
                            @onblur="BuscarNombreApi();",
                            @requied = true
                        })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Usu_Nombre,
                        new
                        {
                            @class="form-control form-control",
                            @placeholder="Nombre",
                            @type="text",
                            @readOnly = true,
                            @requied = true
                        })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Usu_Correo,
                        new
                        {
                            @class="form-control form-control",
                            @placeholder="Correo",
                            @type="email",
                            @onblur="BuscarCorreo('Registrar');",
                            @requied = true
                        })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.Usu_Clave,
                        new
                        {
                            @class="form-control form-control",
                            @placeholder="Contraseña",
                            @requied = true
                        })
                </div>
                <div class="mt-3">
                    <input type="submit" id="btnProcesar" disabled class="btn btn-block btn-primary btn font-weight-medium auth-form-btn" value="Registrarse" />
                    <br />
                    <a href="@Url.Action("Index", "Home")" class="text-primary">Volver a incio de sesión</a>
                </div>
            }
        </div>
    </div>
</div>
