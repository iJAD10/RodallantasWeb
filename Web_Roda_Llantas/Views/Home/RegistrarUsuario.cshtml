@model Web_Roda_Llantas.Entities.UsuarioEntities

@{
    ViewData["Title"] = "Registrar usuario";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div class="row w-100 mx-0">
    <div class="col-lg-4 mx-auto">
        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
            <h4>Registrar Usuario</h4>
            @using (Html.BeginForm("RegistrarUsuario", "Home", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Usu_Cedula,
                        new
                        {
                            @class="form-control form-control-lg",
                            @placeholder="Identificación",
                            @type="number",
                            @minlength="9",
                            @maxlength="9",
                            @onblur="BuscarNombreApi();",
                            @requied = true
                        })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Usu_Nombre,
                        new
                        {
                            @class="form-control form-control-lg",
                            @placeholder="Nombre",
                            @type="text",
                            @readOnly = true,
                            @requied = true
                        })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Usu_Correo,
                        new
                        {
                            @class="form-control form-control-lg",
                            @placeholder="Correo",
                            @type="email",
                            @onblur="BuscarCorreo('Registrar');",
                            @requied = true
                        })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.Usu_Clave,
                        new
                        {
                            @class="form-control form-control-lg",
                            @placeholder="Contraseña",
                            @requied = true
                        })
                </div>
                <div class="mt-3">
                    <input type="submit" id="btnProcesar" disabled class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" value="Registrarse" />
                </div>
            }
        </div>
    </div>
</div>