@model IEnumerable<Web_Roda_Llantas.Entities.ProductosEntities>

    @{
    ViewData["Tittle"] = "Consulta de Productos";
    var usuario = Context.Session.GetString("Correo")?.ToString();
    }


<div class="col-lg-12 stretch-card">
   <div class="card">
        <div class="card-body">
    <h4 class="card-title">Productos</h4>
    <div class="table-responsive pt-3">
      
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Marca</th>
                    <th>Precio</th>
                    <th>Productos en stock</th>
                </tr>
            </thead>
            <tbody>

                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Prod_Id</td>
                        <td>@item.Prod_Marca</td>
                        <td>@item.Prod_Precio</td>
                        <td>@item.Prod_CantStock</td>
                        <td><a class="nav-link" href="@Url.Action("AgregarCarrito","Productos", new { id_producto = item.Prod_Id})">Agregar al carrito</a></td>
                    </tr>
                }
                

            </tbody>
        </table>
    </div>
</div>
</div>
</div>
