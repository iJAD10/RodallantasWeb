@model IEnumerable<Web_Roda_Llantas.Entities.ReservacionesEntities>

@{
	ViewData["Title"] = "Consulta de Usuarios";
	var usuario = Context.Session.GetString("Correo")?.ToString();
}

<div class="col-lg-12 stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Reservaciones</h4>
			<div class="table-responsive pt-3">
				<table id="TablaReservaciones" class="table table-striped">
					<thead>
					<tr>
						<th>Reserva</th>
						<th>Placa</th>
						<th>Servicios</th>
						<th>Cédula</th>
						<th>Nombre</th>
						<th>Estado</th>
						<th>Acciones</th>
					</tr>
					</thead>
					<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.Res_Id</td>
							<td>@item.Veh_Placa</td>
							<td>@item.TotalReservados</td>
							<td>@item.Usu_Cedula</td>
							<td>@item.Usu_Nombre</td>
							<td>@item.Res_Estado</td>
							<td>
								<a href="@Url.Action("DetallesReservacion", "Reservaciones", new { q = item.Res_Id })">Detalles</a>
								@*<a href="@Url.Action("ActualizarUsuario", "Usuarios", new { q = item.Res_Id })">Actualizar</a>*@
							</td>
						</tr>
					}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>