@model IEnumerable<Web_Roda_Llantas.Entities.ProductosEntities>

@{
    ViewData["Tittle"] = "Consulta de carrito";
    var usuario = Context.Session.GetString("Correo")?.ToString();
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}


<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            @if (Model==null) {  
                <h4 class="card-title">El carrito se encuentra vacio</h4>
            }
            else
            {
                <h4 class="card-title">Carrito</h4>
            <div class="table-responsive pt-3">
               
                    
                      <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Marca</th>
                    <th>Cantidad</th>
                    <th>Precio</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>

                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Prod_Id</td>
                        <td>@item.Prod_Marca</td>
                        <td>@item.Prod_Cantidad</td>
                        <td>@item.Prod_Precio</td>
                        <td>@item.Prod_total</td>
                        <td><a class="nav-link" href="@Url.Action("EliminarCarrito","Carrito", new { Prod_Id = item.Prod_Id})">Eliminar del carrito</a></td>
                    </tr>
                }
                

            </tbody>
        </table>
        <div style="padding-left:1100px" >
            
         <a class="text-white btn btn-block btn-primary font-weight-xs mt-4" href="@Url.Action("FinalizarCompra", "Carrito")">Finalizar compra</a>
         @*<a href="" class="text-white btn btn-block btn-primary font-weight-xs mt-4" onclick="FinalizarCompra();">Finalizar compra</a>*@
         </div>
    </div>
            }

                

</div>
</div>
</div>
<script src="~/js/FuncionesCarrito.js"></script>